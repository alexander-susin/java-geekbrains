node {
    def server = Artifactory.server 'ART'
    def rtMaven = Artifactory.newMavenBuild()
 
stage('Preparation') {
     checkout scm
    }

    stage ('Clone') {
        git url: 'https://github.com/malkinfedor/java_hello_servlet.git'
    }

stage ('Get git hash'){
	shortCommit = sh(returnStdout: true, script: "git log -n 1 --pretty=format:'%h'").trim()
	echo shortCommit
}

    stage ('Artifactory configuration') {
        rtMaven.tool = 'Maven 3.5.2' // Tool name from Jenkins configuration
        rtMaven.deployer releaseRepo: 'asusin_app_test-release', snapshotRepo: 'asusin_app_test-snapshot', server: server
        rtMaven.resolver releaseRepo: 'libs-release', snapshotRepo: 'libs-snapshot', server: server
        buildInfo = Artifactory.newBuildInfo()
        buildInfo.env.capture = true
    }
    
    stage ('Exec Maven') {
        rtMaven.run pom: 'pom.xml', goals: 'clean package', buildInfo: buildInfo
    	echo git.commit.time
	}
/* */
    stage ('Publish build info') {
	
	build.info = '1.2.3'
	server.publishBuildInfo buildInfo
    }

}
